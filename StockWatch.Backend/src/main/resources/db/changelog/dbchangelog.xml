            <column name="name" value="USER"></column>
        </insert>
        <insert tableName="system_user_roles" >
            <column name="id" valueNumeric="1"></column>
            <column name="system_user_id" valueNumeric="1"></column>
            <column name="roles" valueNumeric="1"></column>
        </insert>
    </changeSet>
    <changeSet id="2" author="henning">
        <createTable tableName="stocks">
            <column autoIncrement="true" type="bigint" name="id">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="code" type="varchar(5)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="common_name" type="varchar(126)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="data2" author="henning">
        <insert tableName="stocks" >
